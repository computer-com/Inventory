<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sales Transactions</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container">
    <h1 class="mt-3">Sales Transactions</h1>
    
    <div class="mb-3">
        <a href="/" class="btn btn-secondary">Back to Inventory</a>
        <a href="/ledger" class="btn btn-info">View Ledger</a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Sales Summary</h5>
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-1"><strong>Total Revenue:</strong> $<%= totalRevenue.toFixed(2) %></p>
                    <p class="mb-1"><strong>Total Transactions:</strong> <%= totalSales %></p>
                </div>
            </div>
        </div>
    </div>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>Sale ID</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price Per Item</th>
                <th>Total Amount</th>
                <th>Sale Date</th>
            </tr>
        </thead>
        <tbody>
            <% sales.forEach(sale => { %>
                <tr>
                    <td><%= sale.id %></td>
                    <td><%= sale.inventory.name %></td>
                    <td><%= sale.quantitySold %></td>
                    <td>$<%= sale.pricePerItem.toFixed(2) %></td>
                    <td>$<%= sale.totalAmount.toFixed(2) %></td>
                    <td><%= sale.saleDate.toLocaleDateString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>