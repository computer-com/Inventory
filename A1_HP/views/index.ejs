<!DOCTYPE html>
<html lang="en">
<head>
    <title>Inventory List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container">
    <h1 class="mt-3">Inventory List</h1>
    <a href="/add" class="btn btn-primary">Add Item</a>
    <table class="table mt-3">
        <tr><th>Name</th><th>Quantity</th><th>Price</th><th>Actions</th></tr>
        <% items.forEach(item => { %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.quantity %></td>
                <td>$<%= item.price.toFixed(2) %></td>
                <td>
                    <a href="/edit/<%= item.id %>" class="btn btn-warning">Edit</a>
                    <form action="/delete/<%= item.id %>" method="POST" style="display:inline;">
                    <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>